<html>
<head>
<style type="text/css">
	.photo
	{
		width:100%;
		height:20%;
		border:4px SOLID BLACK;
	}

	.main
	{
		float:left;
		display: inline;
		width:70%;
		margin:10px;
	}

	.personalDetails
	{
		float:left;
		display: inline;
		margin:10px;
		width:25%;
	}

	.header
	{
		background-color: #EEEEEE;
		display: inline-block;
		margin : 30px;
		width:95%;
		border:2px SOLID BLACK;
		border-radius: 10px 10px 10px 10px;
		box-shadow:2px 2px 2px GREY;
	}

	.table
	{
		border:2px SOLID BLACK;
		padding:0px;
		text-align:left;
		font-size: 1em;
		font-family: sans-serif;
		font-weight: bolder;
		border-radius:6px 6px 6px 6px;
		box-shadow:3px 2px 3px GREY;
		width: 80%;
	}

	.tableValue
	{
		padding:10px;
		font-size: 1em;
		font-weight: bold;
		width: 40%
	}

</style>
</head>
<body>
	<div class="header">
		<div class="main">
		<table class="table" cellspacing="0">
			<tr style="background-color:GREY;">
				<th style="padding:20px;">EMPLOYEE ID</th>
				<td class="tableValue"><%= @employee.employees_id %></td>
			</tr>
			<tr style="background-color:WHITE;">
				<th style="padding:20px;">EMPLOYEE DOB</th>
				<td class="tableValue"><%= @profile.dob %></td>
			</tr>
			<tr style="background-color:GREY;">
				<th style="padding:20px;">ADDRESS</th>
				<td class="tableValue"><%= @addr.addressLine1.capitalize %></td>
			</tr>
			<tr style="background-color:GREY;">
				<th></th>
				<td class="tableValue"><%= @addr.addressLine2.capitalize %></td>
			</tr>
			<tr style="background-color:WHITE;">
				<th style="padding:20px;">CITY</th>
				<td class="tableValue"><%= @addr.city.capitalize %></td>
			</tr>
			<tr style="background-color:GREY;">
				<th style="padding:20px;">STATE</th>
				<td class="tableValue"><%= @addr.state.capitalize %></td>
			</tr>
			<tr style="background-color:WHITE;">
				<th style="padding:20px;">ROLE</th>
				<td class="tableValue"><%= @rname.capitalize %>&nbsp;(<%= @employee.roles_id %>)</td>
			</tr>
			<tr style="background-color:GREY;">
				<th style="padding:20px;">DEPARTMENT</th>
				<td class="tableValue"><%= @dname.capitalize %>&nbsp;(<%= @employee.departments_id %>)</td>
			</tr>
			<tr style="background-color:WHITE;">
				<th style="padding:20px;">MANAGER NAME</th>
				<td class="tableValue"><%= @mname.capitalize %></td>
			</tr>		
		</table>
	</div>
	<div class="personalDetails">
		<img class="photo" src="http://www.amdadjusters.org/amd/images/profileholder.gif"/>
		<h2><%= @employee.name.upcase %></h2>
		<h2><%= @employee.email %></h2>
		<h2>PH : 8095610442</h2>
	</div>	
</body>
</html>